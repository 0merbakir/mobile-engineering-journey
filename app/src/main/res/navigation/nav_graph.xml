<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.roadmaps.day5.LandmarkListFragment"
        android:label="Landmarks"
        tools:layout="@layout/fragment_landmark_list">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.roadmaps.day5.LandmarkDetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_landmark_detail">
        <argument
            android:name="landmark"
            app:argType="com.example.roadmaps.day5.Landmark" />
    </fragment>

</navigation>